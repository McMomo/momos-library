---
title: The Library of Momo
layout: base.njk
css: /css/navigation.css
---

<nav>
	{% for navigation in collections.navigation %}
		<div class="nav_card">
			<a href="{{ navigation.url }}" style="{{ 'background: var(' + navigation.data.color + ');' if navigation.data.color }}">
				{# TODO: use alt text instead of if and label / specify font-size: 0 to nav_card > img #}
				{% if navigation.data.icon %}
				<img class="nav_icon" src="{{ navigation.data.icon }}" alt="icon representing {{ navigation.data.title }}" />
				{% elif navigation.data.teaser %}
				<img class="nav_teaser" src="{{ navigation.data.teaser }}" alt="teaser image representing {{ navigation.data.title }}" />
				{% else %}
				<label>{{ navigation.data.title }}</label>
				{% endif %}
			</a>
		</div>
	{% endfor %}
</nav>